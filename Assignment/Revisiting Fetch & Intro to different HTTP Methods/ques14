<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather Fetch App</title>
</head>
<body>
    <form id="weatherForm">
        <input type="text" id="city" placeholder="Enter city name">
        <button type="submit">Get Weather</button>
    </form>
    <div id="weather"></div>

    <script>
        const weatherForm = document.getElementById('weatherForm');
        const cityInput = document.getElementById('city');
        const weatherDisplay = document.getElementById('weather');
        const apiKey = 'YOUR_API_KEY';
        weatherForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const city = cityInput.value.trim(); 

            if (!city) {
                weatherDisplay.textContent = 'Please enter a city name.';
                return;
            }

            fetchWeather(city);
        });

        async function fetchWeather(city) {
            try {
                const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`; 
                const response = await fetch(url);

                if (!response.ok) {
                    if (response.status === 404) {
                        throw new Error('City not found.');
                    } else {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                }

                const data = await response.json();
                weatherDisplay.textContent = `Temperature in ${data.name}: ${data.main.temp}Â°C, ${data.weather[0].description}`; 
            } catch (error) {
                console.error('Error fetching weather:', error);
                weatherDisplay.textContent = `Error: ${error.message}`;
            }
        }
    </script>
</body>
</html>
